{
  "name": "electron-printer-helper",
  "version": "0.1.0",
  "description": "Helper locale per stampa immediata da app web via Electron.",
  "main": "main.js",
  "author": "Hi-Tech Games",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:unsigned": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "icons": "node scripts/generate-icons.js"
  },
  "build": {
    "appId": "it.hitechgames.printerhelper",
    "productName": "HiTech Printer Helper",
    "files": [
      "**/*",
      "assets/icons/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg","zip"],
      "identity": null,
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": ["nsis","zip"],
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": ["AppImage","deb"],
      "category": "Utility",
      "icon": "assets/icons"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "express": "^4.19.2",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "png2icons": "^2.0.1"
  }
}
